{block content}
<div class="container">
    <h2 class="text-center" style="margin: 20px; margin-bottom: 20px">{_articleCategory.list.header}</h2>
</div>
{if count($categories) > 0}
    {foreach $categories as $data}
        {var $category = $data[0]}
        <h3 style="margin:10px 0 0 0;"><a n:href="ArticleCategory:detail $category->id">{$category->name}</a></h3>
        {$category->description}<br />
        <i>{_articleCategory.articlesCount}: {$data["articlesCount"]}</i>
    {/foreach}
{else}
    {_articleCategory.noCategories}
{/if}